@model List<Pin>

@{
    ViewData["Title"] = "Home";
}

<h1>Pinterest Replica</h1>

<div class="pin-grid">
    @foreach (var pin in Model)
    {
        <div class="pin">
            <img src="@pin.ImageUrl" />
            <h4>@pin.Title</h4>
        </div>
    }
</div>


<div class="text-center">
    <h1 class="display-4">Welcome to Pinspire</h1>
    <h4>Let's find your inspiration.</h4>
</div>

<div class="container mt-4">
  <!-- Search Bar -->
  <div class="row mb-4">
    <div class="col-md-8 mx-auto">
      <form class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Search inspiration..." aria-label="Search">
        <button class="btn btn-success" type="submit">Search</button>
      </form>
    </div>
  </div>

  <!-- Masonry Grid -->
  <div class="masonry">
    <img src="~/img/1.png" class="img-fluid rounded shadow-sm mb-4" alt="Image 1">
    <img src="~/img/2.png" class="img-fluid rounded shadow-sm mb-4" alt="Image 2">
    <img src="~/img/3.png" class="img-fluid rounded shadow-sm mb-4" alt="Image 3">
    <img src="~/img/4.png" class="img-fluid rounded shadow-sm mb-4" alt="Image 4">
    <img src="~/img/5.png" class="img-fluid rounded shadow-sm mb-4" alt="Image 5">
    <img src="~/img/6.png" class="img-fluid rounded shadow-sm mb-4" alt="Image 6">
    <img src="~/img/7.png" class="img-fluid rounded shadow-sm mb-4" alt="Image 7">
    <img src="~/img/8.png" class="img-fluid rounded shadow-sm mb-4" alt="Image 8">
    <img src="~/img/9.png" class="img-fluid rounded shadow-sm mb-4" alt="Image 9">
    <img src="~/img/10.png" class="img-fluid rounded shadow-sm mb-4" alt="Image 10">
    <img src="~/img/11.png" class="img-fluid rounded shadow-sm mb-4" alt="Image 10">
    <img src="~/img/12.png" class="img-fluid rounded shadow-sm mb-4" alt="Image 10">
    <img src="~/img/13.png" class="img-fluid rounded shadow-sm mb-4" alt="Image 10">
    <img src="~/img/14.png" class="img-fluid rounded shadow-sm mb-4" alt="Image 10">
    <img src="~/img/15.png" class="img-fluid rounded shadow-sm mb-4" alt="Image 10">
  </div>
</div>

<style>
  .masonry {
    column-count: 3;       /* number of columns */
    column-gap: 1rem;      /* space between columns */
  }
  .masonry img {
    width: 100%;
    display: block;
    margin-bottom: 1rem;
    break-inside: avoid;   /* prevents awkward breaks */
  }

</style>




